#!/bin/sh

YUM_FILE="/etc/yum.repos.d/megasync.repo"

if [ -f /etc/fedora-release ] ; then
    DNAME="Fedora"
    VER=`cat /etc/fedora-release | sed s/.*release\ // | sed s/\ .*//`
    DIST="${DNAME}_${VER}"
fi

if [[ $DNAME = "Fedora" ]]; then
    # assume that this is a yum based distro
    if [ -d "/etc/yum.repos.d" ]; then
    cat > "$YUM_FILE" << DATA
[MEGAsync]
name=MEGAsync
type=rpm-md
baseurl=https://mega.co.nz/linux/MEGAsync/$DIST/
gpgcheck=1
gpgkey=https://mega.co.nz/linux/MEGAsync/$DIST/repodata/repomd.xml.key
enabled=1
DATA
    fi
fi
